<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#FFEDED"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_48">

        <ImageView
            android:layout_width="@dimen/view_space_28"
            android:src="@drawable/no_net_woker_iv"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/view_space_22"
            android:layout_height="@dimen/view_space_28">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_14"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/view_space_22"
            android:layout_width="match_parent"
            android:text="当前网络不可用，请检查你的网络设置"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

</LinearLayout>