<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期："
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"

                tools:text="2021-07-12 00:00:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="坐标："
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_zuobiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_danhao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请单号:"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_danhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"
                tools:text="333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_shenbaomingcheng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申报人名称:"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_shenbao_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_shoujiren_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收集人:"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_shouji_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_animal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动物种类:"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/type_animal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/Red"
                android:textSize="@dimen/text_size_24"
                tools:text="1" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Red"
            android:text="监督员：秦玉刚"
            android:textSize="@dimen/text_size_24"
             />
    </LinearLayout>
</RelativeLayout>