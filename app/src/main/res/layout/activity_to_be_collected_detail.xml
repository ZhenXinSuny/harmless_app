                android:textColor="@color/T6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/sbsj_tv"
                tools:text="SHADASDJKASJHDKASHDKASJ"
