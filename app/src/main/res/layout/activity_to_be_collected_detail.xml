        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/view_space_4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="银行卡号："
                android:textSize="@dimen/text_size_14"
