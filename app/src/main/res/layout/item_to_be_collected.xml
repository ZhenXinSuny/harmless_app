<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_marginLeft="@dimen/view_space_16"
            android:layout_marginTop="@dimen/view_height_8"
            android:layout_marginBottom="@dimen/view_height_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_iv"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_tb_home"
            android:layout_gravity="center"
            android:layout_width="@dimen/view_space_24"
            android:layout_height="@dimen/view_space_24">

        </ImageView>
        <TextView
         android:layout_toRightOf="@+id/home_iv"
            android:id="@+id/name_tv"
            tools:text="刘振新"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/view_space_2"
            android:textStyle="bold"

            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_no_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="待收集"
                android:paddingLeft="@dimen/view_height_8"
                android:gravity="right"
                android:textColor="@color/white"
                android:id="@+id/no_collected"
                android:textSize="@dimen/text_size_14"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/view_space_4"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_tb_xdr"
            android:layout_gravity="center"
            android:layout_width="@dimen/view_space_24"
            android:layout_height="@dimen/view_space_24">

        </ImageView>
        <TextView
            tools:text="刘振新"
            android:id="@+id/username_tv"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/view_space_2"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/source_type_tv"
            tools:text="呼交"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_border"
            android:textSize="@dimen/text_size_10"
            android:layout_toRightOf="@+id/name_tv"
            android:layout_marginStart="@dimen/view_space_2"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/view_space_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_tb_phone"
            android:layout_gravity="center"
            android:layout_width="@dimen/view_space_24"
            android:layout_height="@dimen/view_space_24">

        </ImageView>
        <TextView
            android:id="@+id/phone_tv"
            tools:text="15100000000"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/J5"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/view_space_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/times_tv"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/view_space_4"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_tb_location"
            android:layout_gravity="center"
            android:layout_width="@dimen/view_space_24"
            android:layout_height="@dimen/view_space_24">

        </ImageView>
        <TextView
            android:id="@+id/address_tv"
            tools:text="刘振新"
            android:textSize="@dimen/text_size_16"
            android:layout_marginStart="@dimen/view_space_2"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_animal_count"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/view_space_24"
                    android:layout_height="@dimen/view_space_24"/>
                <TextView
                    android:id="@+id/animal_count_tv"
                    tools:text="猪牛羊888头"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/J5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D1"
        />
</LinearLayout>