<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border_white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/view_space_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/view_space_16"
            android:text="蓝牙列表"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerview_ble"
          android:layout_width="match_parent"
          android:layout_marginBottom="@dimen/view_space_12"
          android:layout_marginStart="@dimen/view_space_10"
          android:layout_marginEnd="@dimen/view_space_10"

          android:layout_height="wrap_content">
      </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/last_used_ble_bt"
            android:text="连接最后一次连接的设备"
            android:layout_marginBottom="@dimen/view_space_12"
            android:layout_marginTop="@dimen/view_space_10"
            android:layout_marginStart="@dimen/view_space_42"
            android:layout_marginEnd="@dimen/view_space_42"
            android:background="@drawable/edittext_bg_focused"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_40"
            android:textColor="@color/J5"
            android:textSize="@dimen/text_size_14"

            />
    </LinearLayout>

</LinearLayout>