<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_space_16"
            android:layout_marginTop="@dimen/view_height_8"
            android:layout_marginBottom="@dimen/view_height_8"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="刘振新"></TextView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系人：">

                </TextView>

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="刘振新"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="电话号：">

                </TextView>

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/J5"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="16655665566"></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="区划名称：">

                </TextView>

                <TextView
                    android:id="@+id/region_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="崇州市街子镇上元社区"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="详细地址：">

                </TextView>

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="崇州市街子镇上元社区"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="动物种类：">
                </TextView>

                <TextView
                    android:id="@+id/animal_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text="猪,牛"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_Ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:visibility="gone"
                android:orientation="horizontal"
              >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="审核状态：">

                </TextView>

                <TextView
                    android:id="@+id/check_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/J5"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text=""></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/perfect_Ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="完善状态：">

                </TextView>

                <TextView
                    android:id="@+id/perfect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/J5"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    tools:text=""></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/view_space_10"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/edit_btn"
                    android:background="@drawable/selector_common_btn_edit"
                    android:layout_gravity="right"
                    android:text="信息编辑"
                    android:textColor="#67C23A"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="@dimen/view_space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_space_32">
                </Button>


                <Button
                    android:id="@+id/reject_btn"
                    android:background="@drawable/selector_common_btn_red_bo"
                    android:text="审核驳回"
                    android:textColor="@color/C12"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="@dimen/view_space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_space_32">
                </Button>
                <Button
                    android:id="@+id/check_btn"
                    android:background="@drawable/selector_common_btn_blue"
                    android:layout_gravity="right"
                    android:text="审核通过"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/J5"
                    android:layout_marginRight="@dimen/view_space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_space_32">
                </Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D1" />
</LinearLayout>