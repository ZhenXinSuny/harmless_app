<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border_white"
    android:orientation="vertical"
    >

    <LinearLayout

        android:orientation="vertical"
        android:paddingLeft="@dimen/view_space_22"
        android:paddingRight="@dimen/view_space_22"
        android:paddingTop="@dimen/view_space_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="完善信息"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"

            />
        <TextView
            android:layout_marginTop="@dimen/view_height_8"
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/T2"
            android:text="您需要完善以下信息才可以进行绑定操作。"
            android:textSize="@dimen/text_size_14"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RadioGroup
                android:layout_marginTop="@dimen/view_height_8"
                android:id="@+id/radioGroup_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/natural_person_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/selector_check"
                    android:checked="true"
                    android:paddingLeft="@dimen/view_height_8"
                    android:text="自然人"
                    android:textColor="@color/T2"
                    android:textSize="@dimen/text_size_14" />

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/enterprise_rb"
                    android:button="@drawable/selector_check"
                    android:paddingLeft="@dimen/view_height_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业"
                    android:textColor="@color/T2"
                    android:textSize="@dimen/text_size_14" />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_12"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="姓&#12288;&#12288;名:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入姓名"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/phone_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="手机号&#12288;:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/idcard_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="身份证号:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/idcard_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入身份证号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>





            <LinearLayout
                android:visibility="gone"
                android:id="@+id/legal_person_Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="法&#12288;&#12288;人:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/legal_person_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入法人名称"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/credit_code_Ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="信用代码:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/credit_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入信用代码"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="区&#12288;&#12288;划:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/region_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_6"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/view_space_6"
                        android:gravity="center"
                        android:text="所在村名:"
                        android:textColor="@color/T9"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

                <EditText
                    android:id="@+id/cun_region_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_48"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/view_space_14"
                    android:layout_marginEnd="@dimen/view_space_14"
                    android:background="@null"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:hint="请输入所在村名称"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/T1"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_12"
            android:layout_marginBottom="@dimen/view_space_18"
            android:orientation="vertical">

            <Button
                android:id="@+id/perfect_information_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_weight="1"
                android:background="@drawable/ripple_login"
                android:lineSpacingExtra="@dimen/view_space_20"
                android:lineSpacingMultiplier="1.5"
                android:text="完善信息"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/cancel_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/view_space_6"
                android:layout_height="@dimen/view_height_44"
                android:layout_weight="1"
                android:background="@drawable/selector_common_btn_red"
                android:lineSpacingExtra="@dimen/view_space_20"
                android:lineSpacingMultiplier="1.5"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>





        </LinearLayout>
    </LinearLayout>
</LinearLayout>