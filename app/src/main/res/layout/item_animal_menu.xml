<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:padding="@dimen/view_space_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_44">



        <TextView
            android:gravity="center"
            android:id="@+id/earTag_tv"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16"
            android:textColor="@android:color/black"
            android:text="-"
            />


        <TextView
            android:id="@+id/dongwu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/view_space_12"
            android:layout_toStartOf="@+id/zhongliang_tv"
            android:gravity="center"
            android:text="猪"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/zhongliang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/view_space_12"
            android:layout_toStartOf="@+id/del_btn"
            android:gravity="center"
            android:text="10kg"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/del_btn"
            android:layout_width="@dimen/view_height_56"
            android:layout_height="@dimen/view_height_36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ps_del_btn"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
    <View
        android:id="@+id/view_1"
        android:layout_marginLeft="@dimen/view_space_12"
        android:layout_marginRight="@dimen/view_space_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_1"
        android:background="@color/D2" />

</LinearLayout>