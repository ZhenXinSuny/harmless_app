<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_marginLeft="@dimen/view_space_16"
            android:layout_marginTop="@dimen/view_height_8"
            android:layout_marginBottom="@dimen/view_height_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_tv"
                    tools:text="刘振新"
                    android:textSize="@dimen/text_size_16"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>



            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="联系人："
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    tools:text="刘振新"
                    android:id="@+id/username_tv"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="电话号："
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    tools:text="16655665566"
                    android:id="@+id/phone_tv"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/J5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="地址\u3000："
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    tools:text="崇州市街子镇上元社区"
                    android:id="@+id/address_tv"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="申报单数："
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    tools:text="12"
                    android:id="@+id/whhcount_tv"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/view_space_4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="时间\u3000："
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    tools:text="12"
                    android:id="@+id/times_tv"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/view_space_2"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D1"
        />
</LinearLayout>