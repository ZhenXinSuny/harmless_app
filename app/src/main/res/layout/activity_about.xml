<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:showDividers="middle"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titleBarHeight_48"
        android:background="@color/white"
        android:gravity="center_vertical">

         <ImageView
            android:id="@+id/titlebar_left"
            android:layout_width="@dimen/view_space_22"
            android:src="@drawable/title_back"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <com.agridata.cdzhdj.view.ScrollForeverTextView
            android:id="@+id/titlebar_middle"
            android:layout_width="wrap_content"
            android:text="关于我们"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:background="@color/D1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/view_space_120"
            android:layout_height="@dimen/view_space_120"
            android:layout_marginBottom="@dimen/view_space_8"
            android:layout_marginTop="@dimen/view_space_16"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@null"
            android:src="@drawable/old_applogo_pic"
            />
        <TextView
            android:id="@+id/app_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_16"
            />
    </LinearLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_space_22"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginStart="@dimen/view_space_16"
        android:background="@color/D1"
        />

    <LinearLayout
        android:id="@+id/version_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_56"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingRight="@dimen/view_space_16"
        >
        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="版本更新"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/version_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/J5"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/view_space_4"
            android:paddingBottom="@dimen/view_space_2"
            android:paddingTop="@dimen/view_space_2"
            android:paddingRight="@dimen/view_space_4"
            android:layout_marginLeft="@dimen/view_space_10"
            android:layout_marginRight="@dimen/view_space_4"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/ic_arrow_right_grey"
            />
    </LinearLayout>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D1"
        />



</LinearLayout>
