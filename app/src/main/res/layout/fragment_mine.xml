<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_12"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="@dimen/view_space_86"
            android:layout_height="@dimen/view_space_86"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_space_30"
            android:layout_marginRight="@dimen/view_space_18"
            android:layout_marginBottom="@dimen/view_space_60"
            android:contentDescription="@null"
            android:src="@drawable/ic_user_face_default" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_height_42"
            android:ellipsize="end"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/T2"
            android:textSize="@dimen/F1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_10"
            android:text="账号："
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_16" />

        <com.donkingliang.labels.LabelsView
            android:id="@+id/labeled_ls"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_code"
            app:labelTextSize="@dimen/text_size_12"
            app:labelTextHeight="@dimen/view_space_30"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_8"
            android:layout_marginRight="@dimen/view_space_18"
            app:labelBackground="@drawable/label_bg"
            app:labelTextColor="@color/white"
            app:wordMargin="10dp">

        </com.donkingliang.labels.LabelsView>
        <include
            layout="@layout/include_divider_line"
            android:layout_width="@dimen/view_space_36"
            android:layout_height="1dp"
            android:layout_below="@+id/home_code"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_20" />

        <TextView
            android:id="@+id/home_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_code"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_36"
            android:layout_marginBottom="@dimen/view_space_20"
            android:text="我的角色"
            android:textColor="@color/text_2b2c32"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_10"
        android:background="@color/contact_divider" />

    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_64"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2">

        <ImageView
            android:id="@+id/home_stting_icon"
            android:layout_width="@dimen/view_height_64"
            android:layout_height="@dimen/view_height_64"
            android:padding="@dimen/view_height_16"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/home_stting_tex"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D2" />




    <LinearLayout
        android:id="@+id/about_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_64"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2">

        <ImageView
            android:layout_width="@dimen/view_height_64"
            android:layout_height="@dimen/view_height_64"
            android:padding="@dimen/view_height_16"
            android:src="@drawable/ic_online_service" />

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D2" />


    <LinearLayout
        android:id="@+id/my_info_updata_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_64"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2">

        <ImageView
            android:layout_width="@dimen/view_height_64"
            android:layout_height="@dimen/view_height_64"
            android:padding="@dimen/view_height_16"
            android:src="@drawable/ic_about_me" />

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="个人信息同步"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D2" />



    <LinearLayout
        android:id="@+id/collection_info_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_64"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2">

        <ImageView
            android:layout_width="@dimen/view_height_64"
            android:layout_height="@dimen/view_height_64"
            android:padding="15dp"
            android:src="@drawable/ic_search_msg_default" />

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="收集信息提交"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_16"
        android:background="@color/D2" />


</LinearLayout>